<div class="jumbotron">
  <div class="container">
    <h1>Account settings</h1>
    <p>Name: <%=user.name%></p>
    <p>Surname: <%=user.surname%></p>
    <p>User name: <%=user.username%></p>
    <p>Email: <%=user.email%></p>

    <a href="/profile/edit-profile"><button>Edit profile</button></a>
   </div>
  <div class="container">
    <a href="../festival/add-festival"><button> Submit festival</button></a> 
    <h2>Your festivals</h2>
    <ul>
      <% allFestivals.forEach(festival => { %>
        <li>
          <h3><%-festival.name%></h3>
          <a href="/festival/edit-festival/<%-festival._id%>"><button>Edit Festival</button></a>
          <a href="/festival/delete-festival/<%-festival._id%>"><button>Delete Festival</button></a>
        </li>
        <% }) %>
      </ul>
  </div>
</div>
</div>